{
  "version": "0.2.2",
  "name": "@appril/pgts",
  "description": "PostgreSQL Typed Schema",
  "author": "Slee Woo",
  "license": "MIT",
  "engines": {
    "node": "20.9",
    "npm": "10"
  },
  "files": [
    "pkg/*"
  ],
  "// ✨ seems exports.types not fully supported by all editors yet?": "",
  "types": "./pkg/index.d.ts",
  "exports": {
    ".": {
      "require": "./pkg/index.js",
      "types": "./pkg/index.d.ts"
    }
  },
  "scripts": {
    "// ✨ build": "",
    "prebuild": "mkdir -p pkg; find pkg -type f -exec rm -fv {} \\;",
    "build": "esbundler lib/index.ts --sourcemap=inline --outdir=pkg",
    "postbuild": "tsc -p lib/tsconfig.json",
    "// ✨ publish": "",
    "prepub": "npm run build",
    "pub": "npm pub"
  },
  "dependencies": {
    "extract-pg-schema": "^4.2.4",
    "lodash": "^4.17.21",
    "pluralize": "^8.0.0"
  },
  "devDependencies": {
    "@appril/dev": "^0.2.0",
    "@appril/scripts": "^0.2.0",
    "@types/lodash": "^4.14.200",
    "@types/node": "^20.8.8",
    "@types/pg": "^8.10.7",
    "@types/pluralize": "^0.0.32",
    "esbuild": "^0.19.5",
    "typescript": "^5.2.2"
  }
}
