{
  "version": "0.2.9",
  "name": "@appril/pgts",
  "description": "PostgreSQL Typed Schema",
  "author": "Slee Woo",
  "license": "MIT",
  "engines": {
    "node": ">=20.10",
    "npm": ">=10.2"
  },
  "files": [
    "pkg/*"
  ],
  "exports": {
    ".": {
      "require": "./pkg/index.js",
      "types": "./pkg/index.d.ts"
    }
  },
  "scripts": {
    "// ✨ linters": "",
    "lint": "biome lint ./lib",
    "// ✨ types": "",
    "tsc": "tsc --emitDeclarationOnly",
    "// ✨ builders": "",
    "esbuilder": "set -e; func() { e=$1; shift; esbuild lib/$e.ts --outfile=pkg/$e.js --bundle --platform=node --target=node20 --packages=external --sourcemap=inline $*; }; func",
    "// ✨ build": "",
    "prebuild": "mkdir -p pkg; find pkg -type f -exec rm -fv {} \\;",
    "build": "set -e; npm run lint; npm run tsc; npm run esbuilder index"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run build"
      ]
    }
  },
  "dependencies": {
    "extract-pg-schema": "^5.0.0",
    "lodash": "^4.17.21",
    "pluralize": "^8.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@appril/tsconfig": "^0.2.5",
    "@biomejs/biome": "^1.5.3",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.25",
    "@types/pg": "^8.11.2",
    "@types/pluralize": "^0.0.33",
    "esbuild": "^0.20.1",
    "release-it": "^17.1.1",
    "typescript": "^5.4.2"
  }
}
