{
  "version": "0.2.4",
  "name": "@appril/pgts",
  "description": "PostgreSQL Typed Schema",
  "author": "Slee Woo",
  "license": "MIT",
  "engines": {
    "node": "20.10",
    "npm": "10.2"
  },
  "files": [
    "pkg/*"
  ],
  "// ✨ seems exports.types not fully supported by all editors yet?": "",
  "types": "./pkg/index.d.ts",
  "exports": {
    ".": {
      "require": "./pkg/index.js",
      "types": "./pkg/index.d.ts"
    }
  },
  "scripts": {
    "// ✨ build": "",
    "prebuild": "mkdir -p pkg; find pkg -type f -exec rm -fv {} \\;",
    "build": "esbundler lib/index.ts --sourcemap=inline --outdir=pkg",
    "postbuild": "tsc -p lib/tsconfig.json",
    "// ✨ publish": "",
    "prepub": "npm run build",
    "pub": "npm pub",
    "postpub": "mkdir -p var/pub; npm pack --pack-destination var/pub"
  },
  "dependencies": {
    "extract-pg-schema": "^4.3.2",
    "lodash": "^4.17.21",
    "pluralize": "^8.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@appril/dev": "^0.2.2",
    "@appril/scripts": "^0.2.2",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/pluralize": "^0.0.33",
    "esbuild": "^0.19.10",
    "release-it": "^17.0.1",
    "typescript": "^5.3.3"
  }
}
